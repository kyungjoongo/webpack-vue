{
    "name": "webpack-vue",
    "version": "0.0.1",
    "description": "A Vue/Webpack/Cordova boilerplate for prototyping",
    "main": "source/js/main.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development webpack-dev-server --inline --hot",
        "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "lint": "./node_modules/eslint/bin/eslint.js --ext .js,.vue,.ts source",
        "test": "mocha --watch --compilers js:babel-core/register --recursive --reporter dot source/test",
        "buildfast": "cross-env NODE_ENV=fast webpack --progress --hide-modules",
        "icon": "cordova-icon --icon=source/img/icon.png",
        "splash": "cordova-splash --splash=source/img/splash.png",
        "cordova": "node scripts/cordova/init.js && yarn build && yarn addiOS && yarn icon && yarn splash",
        "addiOS": "cordova platform add ios",
        "bumpCordova": "node scripts/cordova/versionBump.js $npm_package_version",
        "bump": "npm --no-git-tag-version version patch && yarn bumpCordova",
        "buildCordova": "yarn build && cordova prepare"
    },
    "keywords": [
        "cordova",
        "webpack",
        "vue",
        "boilerplate"
    ],
    "author": "Normally",
    "license": "ISC",
    "devDependencies": {
        "babel-core": "6.26.0",
        "babel-loader": "^7.1.2",
        "babel-plugin-transform-runtime": "6.23.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-stage-2": "6.24.1",
        "clean-webpack-plugin": "^0.1.16",
        "copy-webpack-plugin": "^4.0.1",
        "cordova-icon": "^0.10.0",
        "cordova-splash": "^0.9.0",
        "cross-env": "^5.0.5",
        "css-loader": "^0.28.7",
        "favicons-webpack-plugin": "^0.0.7",
        "file-loader": "^1.1.5",
        "friendly-errors-webpack-plugin": "^1.6.1",
        "fs-extra": "^4.0.2",
        "html-webpack-plugin": "2.30.1",
        "image-webpack-loader": "3.4.2",
        "node-sass": "4.5.3",
        "prompt": "^1.0.0",
        "sass-loader": "6.0.6",
        "style-loader": "^0.19.0",
        "template-file": "^3.0.1",
        "vue-loader": "^13.3.0",
        "vue-style-loader": "^3.0.3",
        "vue-template-compiler": "2.4.4",
        "webpack": "^3.7.1",
        "webpack-dev-server": "2.9.1"
    },
    "dependencies": {
        "babel-preset-env": "^1.6.1",
        "chai": "^4.0.2",
        "eslint": "^4.0.0",
        "eslint-plugin-vue": "^3.13.1",
        "fastclick": "^1.0.6",
        "inobounce": "0.1.5",
        "mocha": "^4.0.1",
        "vue": "2.4.4",
        "vue-awesome-swiper": "2.6.7"
    },
    "repository": "https://github.com/Normally/webpack-vue.git",
    "cordova": {
        "plugins": {},
        "platforms": []
    }
}
